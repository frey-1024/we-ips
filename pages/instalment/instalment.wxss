/* pages/instalment/instalment.wxss */
page{
  height: 100%;
}
.instalment{
  background-color: #eee;
  height: 100%;
  position: relative;
}
.ins-img{
  width: 100%;
}
.content{
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  padding: 25rpx 30rpx 25rpx;
  display: block;
  margin-bottom: 15rpx;
}
.title{
  display: block;
  padding-bottom: 15rpx;
  font-size: 34rpx;
  text-align: center;
}

.msg-detail{
  color: #808080;
  font-size: 28rpx;
  line-height: 1.7;
  display: block;
}
.sub-title{
  color: #4D4D4D;
}
.btn{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx 20rpx;
}