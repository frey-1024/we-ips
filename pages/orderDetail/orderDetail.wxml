<view class="container order-detail">
    <image class="order-img" src="https://ips-source.oss-cn-hangzhou.aliyuncs.com/ipsimg/imgs/detail1.png" mode="widthFix"></image>
    <view class="content">
        <wux-cell-group>
            <wux-cell title="订单号" extra="{{info.ordernum}}"></wux-cell>
            <wux-cell title="服务类目" extra="{{info.category}}"></wux-cell>
            <wux-cell title="联系人" extra="{{info.contacts}}"></wux-cell>
            <wux-cell title="联系电话" extra="{{info.phone}}"></wux-cell>
            <wux-cell title="上门时间" extra="{{info.time}}"></wux-cell>
            <wux-cell>
                <view class="flex-row col-center">
                    <text class="flex-1">服务地址</text>
                    <text class="flex-2 text-break text-right text-gray">{{info.area}}</text>
                </view>
            </wux-cell>
            <wux-cell title="问题描述" extra="{{info.describe}}"></wux-cell>
            <wux-cell>
                <view class="flex-row row-left col-center upload-img-list">
                    <view class="flex-1 img-wrapper" wx:for="{{info.imgs}}" wx:for-item="item" wx:key="item">
                        <image src="{{item}}" mode="scaleToFill" class="upload-img"></image>
                    </view>
                </view>
            </wux-cell>
        </wux-cell-group>
    </view>
    <view class="content mt-20">
        <wux-cell-group>
            <wux-cell title="维修师傅" is-link extra="小王"></wux-cell>
        </wux-cell-group>
    </view>
    <view class="btn">
        <wux-button block type="calm" bind:click="go">立即前往分期</wux-button>
    </view>
</view>
