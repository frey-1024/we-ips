.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.flex-1{
  flex: 1;
}

.ml-7{
  margin-left: 7rpx;
}
.mr-7{
  margin-right: 7rpx;
}

.text{
  color: #4D4D4D;
  font-size: 32rpx;
  font-weight: bold;
}

.userinfo {
  padding: 15rpx 20rpx;
  background-color: #eee;
  width: 100%;
  box-sizing: border-box;
}
.repair-wrapper{
   background-color: #fff;
   display: flex;
   align-items: flex-start;
   padding: 15rpx;
}
.repair-text, .design-text{
   padding: 15rpx 20rpx;
}
.design-text{
  padding-top: 25rpx;
  padding-left: 30rpx;
}
.repair{
   background-color: #fff;
   height: 160rpx;
   flex: 1;
}

.design-content{
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}
.design-wrapper{
  background-color: #fff;
}
.design{
  background-color: #fff;
  height: 140rpx;
  width: 50rpx;
}
.swiper{
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.img{
  width: 100%;
  height: 160rpx;
  box-sizing: border-box;
}






.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.banner {
  height: 420rpx;
  width: 100%;
}