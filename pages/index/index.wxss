
.home{
  position: relative;
}
.get-user-btn{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  opacity: 0;
  z-index: 6;
}
.get-phone-btn{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  opacity: 0;
  z-index: 3;
}
.banner {
  width: 100%;
  display: block;
}
.userinfo {
  padding: 15rpx 20rpx;
  background-color: #eee;
  width: 100%;
  box-sizing: border-box;
}
.repair-wrapper{
   background-color: #fff;
   display: flex;
   align-items: flex-start;
   padding: 15rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}
.repair-text, .design-text{
   padding: 15rpx 20rpx;
}
.design-text{
  padding-top: 25rpx;
  padding-left: 30rpx;
}
.repair{
   background-color: #fff;
   height: 160rpx;
   flex: 1;
}

.design-content{
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}
.design-wrapper{
  background-color: #fff;
}
.design{
  background-color: #fff;
  height: 140rpx;
  width: 50rpx;
}
.swiper{
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
  height: 160rpx;
}
.img{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.fuwu-wrapper{
  margin-top: 20rpx;
}
.fuwu{
  width: 100%;
  display:block;
}
.jiazhuang-wrapper{
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #fff;
}
.jiazhuang-text{
  padding-bottom: 20rpx;
  display: block;
}
.jiazhuang-img{
  width: 100%;
  display:block;
}
.zhuangye-wrapper{
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 30rpx 0;
  background-color: #fff;
}
.zhuangye{
}
.zhuangye-text{
  padding: 0 30rpx 20rpx;
  display: block;
}
.kefu-wrapper{
  position: fixed;
  z-index: 3;
  right: 20rpx;
  bottom: 40rpx;
  padding: 0;
  background-color: transparent;
  border: 0;
}
.kefu-wrapper::after {
  border: 0;
} 
.kefu-img{
  width: 70rpx;
  display: block;
  margin: auto;
}
.kefu-text{
  color:#fff;
  background-color:#6EB8F1;
  border-radius:20rpx 20rpx;
  font-size:24rpx;
  padding:0 20rpx;
  display:block;
  line-height:1.6;
}




.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.authorize-warning{
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box{
  width: 80%;
  display: block;
  background-color: #fff;
  border-radius: 10rpx 10rpx;
}
.title{
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
  border-bottom: 1px solid #ccc;
  display: block;
  width: 100%;
  box-sizing: border-box;
  padding: 25rpx 10rpx;
}
.authorize{
  color: #009900;
  font-weight: bold;
  font-size: 35rpx;
  text-align: center;
  border-top: 1px solid #ccc;
  display: block;
  width: 100%;
  padding: 25rpx 10rpx;
  background-color: #fff;
  line-height: 1.6;
}
.authorize:after{
  border: none;
  padding: 15rpx 10rpx;
  color: #009900;
}
.content{
  text-align: center;
  padding: 30rpx;
}
.logo-img{
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50% 50%;
}
.content-tips1{
  text-align: left;
  font-size: 30rpx;
  color: #4D4D4D;
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
}
.content-tips2{
  color: #888;
  font-size: 30rpx;
  position: relative;
  text-indent: 15rpx;
  text-align: left;
  padding: 20rpx;
}
.content-tips2:after{
  content: '';
  position: absolute;
  left: 10rpx;
  top: 35rpx;
  width: 10rpx;
  height: 10rpx;
  background-color: #888;
  border-radius: 50% 50%;
}
.authorize-warning-title{
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
  border-bottom: 1px solid #ccc;
  display: block;
  width: 100%;
  box-sizing: border-box;
  padding: 25rpx 10rpx;
}