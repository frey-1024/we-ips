<view class="container apply-repair">
    <view class="input-list">
        <wux-cell-group>
            <wux-cell hover-class="none" bind:click="goMapPage">
                <view class="flex-row select-wrapper col-center">
                    <text class="select-label">报修类型</text>
                    <text class="flex-1 placeholderStyle select-content" wx:if="{{!address}}">请选择</text>
                    <text class="flex-1 placeholderStyle select-content selected" wx:else>{{address}}</text>
                    <image class="right-img" src="https://ips-source.oss-cn-hangzhou.aliyuncs.com/ipsimg/materials/list/right.png" mode="widthFix"></image>
                </view>
            </wux-cell>
            <wux-cell hover-class="none" bind:click="goMapPage">
                <view class="flex-row select-wrapper col-center">
                    <text class="select-label">维修类目</text>
                    <text class="flex-1 placeholderStyle select-content" wx:if="{{!address}}">请选择</text>
                    <text class="flex-1 placeholderStyle select-content selected" wx:else>{{address}}</text>
                    <image class="right-img" src="https://ips-source.oss-cn-hangzhou.aliyuncs.com/ipsimg/materials/list/right.png" mode="widthFix"></image>
                </view>
            </wux-cell>
            <wux-cell hover-class="none">
                <wux-input label="联系人" placeholder="先生/女士"/>
            </wux-cell>
            <wux-cell hover-class="none">
                <wux-input label="联系电话" placeholder="联系电话"/>
            </wux-cell>
            <wux-cell hover-class="none" bind:click="goMapPage">
                <view class="flex-row select-wrapper col-center">
                    <text class="select-label text-break">预约上门时间</text>
                    <text class="flex-1 placeholderStyle select-content" wx:if="{{!address}}">请选择</text>
                    <text class="flex-1 placeholderStyle select-content selected" wx:else>{{address}}</text>
                    <image class="right-img" src="https://ips-source.oss-cn-hangzhou.aliyuncs.com/ipsimg/materials/list/right.png" mode="widthFix"></image>
                </view>
            </wux-cell>
            <wux-cell hover-class="none" bind:click="goMapPage">
                <view class="flex-row select-wrapper col-center">
                    <text class="select-label">所在区域</text>
                    <text class="flex-1 placeholderStyle select-content" wx:if="{{!address}}">请选择</text>
                    <text class="flex-1 placeholderStyle select-content selected" wx:else>{{address}}</text>
                    <image class="right-img" src="https://ips-source.oss-cn-hangzhou.aliyuncs.com/ipsimg/materials/list/right.png" mode="widthFix"></image>
                </view>
            </wux-cell>
            <wux-cell hover-class="none">
                <wux-textarea label="详细地址" rows="3" placeholder="需详细地址、如小区、楼座、门牌号等" />
            </wux-cell>
            <wux-cell hover-class="none">
                <view class="select-wrapper">
                    <text class="select-label" style="padding-bottom: 10rpx; display: block">问题描述</text>
                    <textarea class="textarea" placeholder="请描述需要服务的具体内容。" />
                    <text class="placeholderStyle select-content number">0/200</text>
                    <view class="flex-row row-left col-center upload-img-list">
                        <!--<view class="flex-1 img-wrapper">-->
                            <!--<image src="../index/imgs2/empty.png" mode="scaleToFill" class="upload-img"></image>-->
                            <!--<image src="../../images/deltel.png" bindtap='clearImg' data-index="{{index}}" class="deltel"></image-->
                        <!--</view>-->
                        <!--<view class="flex-1 img-wrapper">-->
                            <!--<image src="../index/imgs2/empty.png" mode="scaleToFill" class="upload-img"></image>-->
                            <!--<image src="../../images/deltel.png" bindtap='clearImg' data-index="{{index}}" class="deltel"></image-->
                        <!--</view>-->
                        <!--<view class="flex-1 img-wrapper" bindtap="joinPicture" data-index="{{0}}">-->
                            <!--<image src="../../images/add.png"></image>-->
                        <!--</view>-->
                    </view>
                </view>
            </wux-cell>
        </wux-cell-group>
    </view>
    <view class="btn">
        <wux-button block type="calm" bind:click="go">提交</wux-button>
    </view>
    <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">1111</button>
</view>
