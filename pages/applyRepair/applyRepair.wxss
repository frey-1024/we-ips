page{
    background-color: #eee;
}
.apply-repair{
    position: relative;
}
.input-list{
    background-color: #fff;
}
.select-label{
    margin-left:0;
    margin-right:10rpx;
    text-align:left;
    width: 210rpx;
}
.select-wrapper{
    width: 100%
}
.select-content{
    color: #808080;
    font-size: 40rpx;
}
.select-content.selected{
    color: #4D4D4D;
}
.right-img{
    width: 32rpx;
}
.number{
    display: block;
    width: 100%;
    text-align: right;
}
.textarea{
    height: 150rpx;
    display: block;
    width: 100%;
}
.btn{
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 20rpx;
}
.img-wrapper{
    position: relative;
    margin-right: 30rpx;
}
.upload-img{
    width: 200rpx;
    height: 180rpx;
}
.delete-img{
    position: absolute;
    right: -25rpx;
    top: -25rpx;
    width: 60rpx;
    height: 60rpx;
    display: block;
    z-index: 3;

}
.cover-de{
    position: absolute;
    right: -10rpx;
    top: -10rpx;
    width: 30rpx;
    height: 30rpx;
    background-color: #fff;
    border-radius: 50% 50%;
    z-index: 2;
}